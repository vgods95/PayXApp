@using PayxApp.ViewModels
@model SimulacaoViewModel
<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Simulação</title>
    <link rel='shortcut icon' type='image/x-icon' href='../assets/img/favicon.ico' />
    <!-- jQuery -->
    <script src="../js/jquery-3.6.0.min.js"></script>
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic" rel="stylesheet"
          type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="../css/styles.css" rel="stylesheet" />
</head>
<body class="transacao">
    <form>
        <div hidden id="simulacao-json">
            @TempData["Simulacao"]
        </div>

        <div id="conteudo-simulacao" class="container mx-auto mt-5 p-5 bg-light">
            <div class='row'>
                <div class='form-group col-12'>
                    <h3 class='text-center'>Simulação</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div id="erro" class="text-danger text-start"></div>
                </div>
            </div>
            <div class='row'>
                <div class='form-group col-12 col-md-8'>
                    <label for='nome-completo'>Nome completo:</label>
                    <input type='text' id='nome-completo' name='nome-completo' class='form-control was-validated' readonly>
                </div>
                <div class='form-group col-12 col-md-4'>
                    <label for='celular'>Celular:</label>
                    <input type='text' id='celular' name='celular' class='form-control was-validated' readonly>
                </div>
            </div>

            <div class='row'>
                <div class='form-group col-12 col-md-8'>
                    <label for='email'>E-mail:</label>
                    <input type='text' id='email' name='email' class='form-control was-validated' readonly>
                </div>
                <div class='form-group col-12 col-md-4'>
                    <label for='valor'>Valor:</label>
                    <input type='number' id='valor' name='valor' class='form-control was-validated' readonly>
                </div>
            </div>

            <table class='table'>
                <thead>
                    <tr>
                        <th scope='col'>Parcelas</th>
                        <th scope='col'>Valor</th>
                    </tr>
                </thead>
                <tbody id="lista-parcelas">
                </tbody>

            </table>

            <div class='row'>
                <div class='form-group col-12'>
                    <button type='button' class='btn btn-primary text-uppercase btn-xl float-right' id='btn-prosseguir'>Prosseguir</button>
                </div>
            </div>
        </div>
    </form>

    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Core theme JS-->
    <script src="../js/scripts.js"></script>
    <!-- Funções próprias -->
    <script src="../js/funcoesSimulacao.js"></script>
</body>
</html>

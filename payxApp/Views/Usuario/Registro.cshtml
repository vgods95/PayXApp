@using PayxApp.ViewModels
@model RegistroViewModel
@{
    Layout = null;
    ViewData["Title"] = "Registro de usuários";
}

<!DOCTYPE html>
<html class="html-registro">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registro - PayXApp</title>
    <link rel='shortcut icon' type='image/x-icon' href='../assets/img/favicon.ico' />
    <!-- jQuery -->
    <script src="../js/jquery-3.6.0.min.js"></script>
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic" rel="stylesheet"
          type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="../css/styles.css" rel="stylesheet" />
</head>
<body class="registro-usuario">
    <div class="spinner-container" hidden>
        <div class="spinner mx-auto my-auto"></div>
    </div>

    <form asp-action="Registro">
        <div class="container mx-auto mt-5 p-5 bg-light">
            <div class="row">
                <div class="col-12 h-auto">
                    <img class="mx-auto d-block" src="~/assets/img/logo-login-registro.png" alt="Logo payX" style="width: 80px;" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group col-12">
                    <h2 class="text-center">Registro</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="text-danger text-start" asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <input asp-for="Nome" class="form-control was-validated" id="NomeCompleto" type="text" placeholder="Seu nome completo*" />
                    <span asp-validation-for="Nome" class="help-block text-danger text-start"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <input asp-for="Cpf" class="form-control was-validated" id="Cpf" type="text" placeholder="Seu CPF*" />
                    <span asp-validation-for="Cpf" class="help-block text-danger text-start" id="validacao-cpf"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <select asp-for="Sexo" id="Sexo" class="form-control select">
                        <option value="" selected>--Sexo</option>
                        <option>Feminino</option>
                        <option>Masculino</option>
                    </select>
                    <span asp-validation-for="Sexo" class="help-block text-danger text-start"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <input asp-for="DataNascimento" class="form-control was-validated" id="DataNascimento" type="date" placeholder="Data de Nascimento*" />
                    <span asp-validation-for="DataNascimento" class="help-block text-danger text-start"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <input asp-for="Cep" class="form-control was-validated" id="Cep" type="text" placeholder="Seu CEP*" />
                    <span asp-validation-for="Cep" class="help-block text-danger text-start" id="validacao-cep"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-9">
                    <input asp-for="Logradouro" class="form-control was-validated" id="Logradouro" type="text" placeholder="Seu endereço*" />
                    <span asp-validation-for="Logradouro" class="help-block text-danger text-start"></span>
                </div>
                <div class="form-group col-3">
                    <input asp-for="Numero" class="form-control was-validated" id="Numero" type="text" placeholder="Número*" />
                    <span asp-validation-for="Numero" class="help-block text-danger text-start"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <input asp-for="Complemento" class="form-control was-validated" id="Complemento" type="text" placeholder="Complemento*" />
                    <span asp-validation-for="Complemento" class="help-block text-danger text-start"></span>
                </div>
                <div class="form-group col-6">
                    <input asp-for="Bairro" class="form-control was-validated" id="Bairro" type="text" placeholder="Bairro*" />
                    <span asp-validation-for="Bairro" class="help-block text-danger text-start"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-3">
                    <select id="Estado" class="form-control select">
                        <option value="" selected>*Estado</option>
                        <option class="form-control" value="AC">AC</option>
                        <option class="form-control" value="AL">AL</option>
                        <option class="form-control" value="AM">AM</option>
                        <option class="form-control" value="AP">AP</option>
                        <option class="form-control" value="BA">BA</option>
                        <option class="form-control" value="CE">CE</option>
                        <option class="form-control" value="DF">DF</option>
                        <option class="form-control" value="ES">ES</option>
                        <option class="form-control" value="GO">GO</option>
                        <option class="form-control" value="MA">MA</option>
                        <option class="form-control" value="MG">MG</option>
                        <option class="form-control" value="MS">MS</option>
                        <option class="form-control" value="MT">MT</option>
                        <option class="form-control" value="PA">PA</option>
                        <option class="form-control" value="PB">PB</option>
                        <option class="form-control" value="PE">PE</option>
                        <option class="form-control" value="PI">PI</option>
                        <option class="form-control" value="PR">PR</option>
                        <option class="form-control" value="RJ">RJ</option>
                        <option class="form-control" value="RN">RN</option>
                        <option class="form-control" value="RO">RO</option>
                        <option class="form-control" value="RR">RR</option>
                        <option class="form-control" value="RS">RS</option>
                        <option class="form-control" value="SC">SC</option>
                        <option class="form-control" value="SE">SE</option>
                        <option class="form-control" value="SP">SP</option>
                        <option class="form-control" value="TO">TO</option>
                    </select>
                    <span asp-validation-for="Cidade" class="help-block text-danger text-start"></span>
                </div>
                <div class="form-group col-9">
                    <select asp-for="Cidade" id="combo-cidade" class="form-control select">
                        <option value="" selected>*Primeiro selecione um estado</option>
                        <!--<option class="form-control" value="cidade.Id">cidade.NomeCidade/cidade.SiglaEstado</option>-->
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <input asp-for="Celular" class="form-control was-validated" id="Celular" type="text" placeholder="Seu celular*" />
                    <span asp-validation-for="Celular" class="help-block text-danger text-start"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <input asp-for="Email" class="form-control was-validated" id="Email" type="email" placeholder="Seu e-mail*" />
                    <span asp-validation-for="Email" class="help-block text-danger text-start"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <input asp-for="Senha" class="form-control was-validated" id="Senha" type="password" placeholder="Sua senha*" data-toggle="tooltip" data-placement="top" data-html="true" title="<p>Deve ter pelo menos 8 caracteres.</p><p>Deve ter pelo menos um caractere especial (#, $, %, &, *, etc.).</p><p>Deve ter pelo menos uma letra minúscula.</p><p>Deve ter pelo menos uma letra maiúscula.</p><p>Deve ter pelo menos um número.</p>" data-trigger="enter" />
                    <span asp-validation-for="Senha" class="help-block text-danger text-start"></span>
                </div>

            </div>
            <div class="row">
                <div class="form-group col-12">
                    <input asp-for="SenhaConfirmada" class="form-control was-validated" id="SenhaConfirmada" type="password" placeholder="Confirme sua senha*" />
                    <span asp-validation-for="SenhaConfirmada" class="help-block text-danger text-start"></span>
                </div>
            </div>

            <!-- Botões -->
            <div class="row">
                <div class="form-group col-12">
                    <button type="submit" class="btn btn-primary btn-xl text-uppercase w-100" id="btn-registrar">Registrar</button>
                    <a asp-controller="Usuario" asp-action="Login">Já possuo uma conta</a>
                </div>
            </div>
        </div>
    </form>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js" integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ==" crossorigin="anonymous"></script>
    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Core theme JS-->
    <script src="../js/scripts.js"></script>
    <!-- Funções próprias -->
    <script src="../js/InicializarMascaras.js"></script>
    <script src="../js/Validacoes.js"></script>
    <script src="../js/funcoesRegistro.js"></script>
</body>
</html>